<ui:UiPage
    x:Name="Market_Page"
    x:Class="TractorMarket.Views.Pages.MarketPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TractorMarket.Views.Pages"
    xmlns:entities="clr-namespace:TractorMarket.Entities"
    xmlns:helpers="clr-namespace:TractorMarket.Helpers"
    xmlns:models="clr-namespace:TractorMarket.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="MarketPage"
    d:DataContext="{d:DesignInstance local:MarketPage, IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:ImagePathHelper x:Key="ImagePathHelper" />
        <BooleanToVisibilityConverter x:Key="VisibilityOfBool" />
        <Style TargetType="ListViewItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="5">
                            <!-- Content Presenter -->
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="56,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="MarketListView" ItemContainerStyle="{StaticResource {x:Type ListViewItem}}" Grid.Column="0" ItemsSource="{Binding ViewModel.Tractors}">
            <ListView.ItemTemplate>
 		        <DataTemplate DataType="{x:Type entities:Tractor}" >
                    <Border CornerRadius="5" Background="{DynamicResource ControlFillColorDefaultBrush}">
                        <Grid Height="200">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.1*" MaxWidth="5"/>
                                <ColumnDefinition MaxWidth="200" Width="0.10*"/>
                                <ColumnDefinition Width="0.7*"/>
                                <ColumnDefinition MaxWidth="300" Width="0.2*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="200"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Column="1" Grid.Row="0" >
                                <Grid  Height="125" Width="125" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Grid.InputBindings>
                                        <MouseBinding Gesture="LeftClick" CommandParameter="{Binding}" Command="{Binding ViewModel.OpenImageViewerCommand, Source={x:Reference Name=Market_Page}}" />
                                    </Grid.InputBindings>

                                    <Border CornerRadius="15">
                                        <Image Height="125" Width="125" Stretch="UniformToFill" Source="{Binding Type, Converter={StaticResource ImagePathHelper}}">
                                            <Image.Clip>
                                                <RectangleGeometry RadiusX="5" RadiusY="5" Rect="0,0,125,125"/>
                                            </Image.Clip>
                                        </Image>
                                    </Border>
                                </Grid>
                            </Grid>

                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="2" Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MaxWidth="1200"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="125"/>
                                    </Grid.RowDefinitions>

                                    <Grid  Grid.Row="0" Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.1*"/>
                                            <ColumnDefinition Width="0.7*"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition MaxWidth="200"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.08*"/>
                                            <RowDefinition Height="0.46*"/>
                                            <RowDefinition Height="0.46*"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" Grid.RowSpan="3" Grid.Column="0"></Grid>

                                        <Grid Grid.Column="1" Grid.Row="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.00*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="0.00*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Row="0" Grid.Column="1">
                                                <TextBlock VerticalAlignment="Bottom" FontSize="20" FontWeight="DemiBold" Foreground="White">Typ</TextBlock>
                                            </Grid>
                                            <Grid  VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="1">
                                                <TextBlock FontSize="14" VerticalAlignment="Top" Margin="0, 0, 0, 0" Padding="0,0,0,0" FontWeight="DemiBold" Foreground="White" Text="{Binding Type}"/>
                                            </Grid>
                                        </Grid>
                                        <Grid Grid.Column="2" Grid.Row="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.5*"/>
                                                <RowDefinition Height="0.5*"/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.00*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="0.00*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Row="0" Grid.Column="1">
                                                <TextBlock   FontSize="20" FontWeight="DemiBold" Foreground="White">Hersteller</TextBlock>
                                            </Grid>
                                            <Grid Grid.Row="1" Grid.Column="1">
                                                <TextBlock FontSize="14" FontWeight="DemiBold" Foreground="White" Text="{Binding Manufacturer}"/>
                                            </Grid>
                                        </Grid>
                                        <Grid Grid.Column="3" Grid.Row="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.5*"/>
                                                <RowDefinition Height="0.5*"/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.0*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="0.0*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Row="0" Grid.Column="1">
                                                <TextBlock FontSize="20" FontWeight="DemiBold" Foreground="White">Preis</TextBlock>
                                            </Grid>
                                            <Grid Grid.Row="1" Grid.Column="1">
                                                <TextBlock 
                                                    x:Name="CustomerPrice"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Foreground="White"
                                                    Text="{Binding Price, StringFormat={}{0}€}"
                                                    Visibility="{Binding ViewModel.IsNotAdmin, RelativeSource={RelativeSource AncestorType={x:Type local:MarketPage}}, Converter={StaticResource VisibilityOfBool}}"
                                                />
                                                <TextBlock 
                                                    x:Name="AdminPrice"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Foreground="White"
                                                    Text="{Binding AdminPrice, StringFormat={}{0}€}"
                                                    Visibility="{Binding ViewModel.IsAdmin, RelativeSource={RelativeSource AncestorType={x:Type local:MarketPage}}, Converter={StaticResource VisibilityOfBool}}"
                                                />
                                            </Grid>
                                        </Grid>

                                        <Grid Grid.Row="2" Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.0*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="0.0*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Row="0" Grid.Column="1">
                                                <TextBlock VerticalAlignment="Bottom" FontSize="20" FontWeight="DemiBold" Foreground="White">Leistung</TextBlock>
                                            </Grid>
                                            <Grid Grid.Row="1" Grid.Column="1">
                                                <TextBlock VerticalAlignment="Top" FontSize="14" FontWeight="DemiBold" Foreground="White" Text="{Binding Horsepower, StringFormat={}{0} PS}"/>
                                            </Grid>
                                        </Grid>
                                        <Grid Grid.Row="2" Grid.Column="2">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.5*"/>
                                                <RowDefinition Height="0.5*"/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.0*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="0.0*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid VerticalAlignment="Bottom" Grid.Row="0" Grid.Column="1">
                                                <TextBlock FontSize="20" FontWeight="DemiBold" Foreground="White">Max. Geschwindigkeit</TextBlock>
                                            </Grid>
                                            <Grid Grid.Row="1" Grid.Column="1">
                                                <TextBlock FontSize="14" FontWeight="DemiBold" Foreground="White" Text="{Binding Velocity, StringFormat={}{0} KM/h}"/>
                                            </Grid>
                                        </Grid>
                                        <Grid Grid.Row="2" Grid.Column="3">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.5*"/>
                                                <RowDefinition Height="0.5*"/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.0*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="0.0*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Row="0" Grid.Column="1">
                                                <TextBlock FontSize="20" FontWeight="DemiBold" Foreground="White">Baujahr</TextBlock>
                                            </Grid>
                                            <Grid Grid.Row="1" Grid.Column="1">
                                                <TextBlock FontSize="14" FontWeight="DemiBold" Foreground="White" Text="{Binding Vintage}"/>
                                            </Grid>
                                        </Grid>

                                        <Grid Grid.Row="1" Grid.RowSpan="2" Grid.Column="4" >
                                            <ui:Hyperlink Content="Verfügbares Zubehör"/>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>

                            <ContentControl 
                                Grid.Column="3"
                                Grid.Row="0"
                            >
                                <ContentControl.Style>
                                    <Style TargetType="{x:Type ContentControl}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ViewModel.IsAdmin, RelativeSource={RelativeSource AncestorType={x:Type local:MarketPage}}}" Value="False">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate>
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="0.2*"/>
                                                                    <RowDefinition Height="0.1*"/>
                                                                    <RowDefinition Height="0.2*"/>
                                                                    <RowDefinition Height="0.3*"/>
                                                                    <RowDefinition Height="0.2*"/>
                                                                </Grid.RowDefinitions>

                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="0.2*"/>
                                                                    <ColumnDefinition Width="0.8*"/>
                                                                    <ColumnDefinition Width="0.2*"/>
                                                                </Grid.ColumnDefinitions>

                                                                <Grid Grid.Row="1" Grid.Column="1">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="0.125*"/>
                                                                        <ColumnDefinition Width="0.875*"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="0.028*"/>
                                                                        <RowDefinition Height="0.972*"/>
                                                                    </Grid.RowDefinitions>

                                                                    <ui:SymbolIcon Grid.Row="0" Grid.RowSpan="2"  FontSize="15" Grid.Column="0"  Symbol="Info16"/>
                                                                    <TextBlock Grid.Row="1" FontSize="12" Grid.Column="1" Text="{Binding Stock, Mode=TwoWay, StringFormat={}Noch {0} Stück auf Lager}"/>
                                                                </Grid>

                                                                <ui:NumberBox Value="{Binding SelectedQuantity, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" IntegersOnly="True" Min="1" Max="{Binding Stock}" />
                                                                <ui:Button CommandParameter="{Binding}" Command="{Binding ViewModel.AddToCartCommand, RelativeSource={RelativeSource AncestorType={x:Type local:MarketPage}}}" VerticalAlignment="Stretch" Margin="0, 7.5, 0, 7.5" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" Icon="Cart24" IconFilled="False" FontSize="30" />
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ViewModel.IsAdmin, RelativeSource={RelativeSource AncestorType={x:Type local:MarketPage}}}" Value="True">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate>
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="0.2*"/>
                                                                    <RowDefinition Height="0.1*"/>
                                                                    <RowDefinition Height="0.2*"/>
                                                                    <RowDefinition Height="0.3*"/>
                                                                    <RowDefinition Height="0.2*"/>
                                                                </Grid.RowDefinitions>

                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="0.2*"/>
                                                                    <ColumnDefinition Width="0.8*"/>
                                                                    <ColumnDefinition Width="0.2*"/>
                                                                </Grid.ColumnDefinitions>

                                                                <Grid Grid.Row="1" Grid.Column="1">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="0.125*"/>
                                                                        <ColumnDefinition Width="0.875*"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="0.028*"/>
                                                                        <RowDefinition Height="0.972*"/>
                                                                    </Grid.RowDefinitions>

                                                                    <ui:SymbolIcon Grid.Row="0" Grid.RowSpan="2"  FontSize="15" Grid.Column="0"  Symbol="Info16"/>
                                                                    <TextBlock Grid.Row="1" FontSize="12" Grid.Column="1" Text="{Binding Stock, Mode=TwoWay, StringFormat={}Du hast {0} Stück auf Lager}"/>
                                                                </Grid>

                                                                <ui:NumberBox Value="{Binding SelectedQuantity, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" IntegersOnly="True" Min="1" />
                                                                <ui:Button CommandParameter="{Binding}" Command="{Binding ViewModel.AddToCartCommand, RelativeSource={RelativeSource AncestorType={x:Type local:MarketPage}}}" VerticalAlignment="Stretch" Margin="0, 7.5, 0, 7.5" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" Icon="Cart24" IconFilled="False" FontSize="30" />
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                            <Grid Width="Auto" Grid.Row="1" Grid.Column="3" ></Grid>
                        </Grid>
                    </Border>
 		        </DataTemplate>
 	        </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ui:UiPage>
